{
    "openapi": "3.0.0",
    "info": {
        "title": "Sistema de classificados de anúcios",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:3000"
        }
    ],
    "paths": {
        "/anuncios": {
            "get": {
                "description": "Listar todos os anúncios criados.",
                "tags": ["Anuncios"],
                "responses": {
                    "200": {
                        "description": "uma lista de anúncios deve ser retornada",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#components/schemas/Anuncios"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": ["Anuncios"],
                "description": "Criar um anúncio.",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#components/schemas/Anuncios"
                            },
                            "examples": {
                                "Anuncio": {
                                    "value": {
                                        "titulo": "Anuncio 1",
                                        "descricao": "Este é um teste.",
                                        "categoria": "Básico",
                                        "preco": 12.99,
                                        "anunciante": "Matheus",
                                        "contato": "1111-1111"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Anúncio criado.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#components/schemas/Anuncios"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/anuncios/cidades": {
            "get": {
                "description": "Listar todos os anúncios da mesma cidade.",
                "tags": ["Anuncios"],
                "parameters": [
                    {
                        "name": "cidade",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "uma lista de anúncios da mesma cidade deve ser retornada",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#components/schemas/Anuncios"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/anuncios/categorias": {
            "get": {
                "description": "Listar todos os anúncios da mesma categoria.",
                "tags": ["Anuncios"],
                "parameters": [
                    {
                        "name": "categoria",
                        "in": "query",
                        "required": false
                    }
                ],
                "responses": {
                    "200": {
                        "description": "uma lista de anúncios da mesma categoria deve ser retornada",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#components/schemas/Anuncios"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/anuncios/{id}": {
            "get": {
                "description": "Listar anúncio pelo id.",
                "tags": ["Anuncios"],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Um anúncio pelo id deve ser retornada",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#components/schemas/Anuncios"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Anúncio não encontrado."
                    }
                }
            },
            "put": {
                "description": "Alterar anúncio.",
                "tags": ["Anuncios"],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#components/schemas/Anuncios"
                            },
                            "examples": {
                                "Anuncio": {
                                    "value": {
                                        "titulo": "Anuncio 1",
                                        "descricao": "Este é um teste.",
                                        "categoria": "Básico",
                                        "preco": 12.99,
                                        "anunciante": "Matheus",
                                        "contato": "1111-1111"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Anúncio alterado.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#components/schemas/Anuncios"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Anúncio não encontrado."
                    }
                }
            },
            "delete": {
                "description": "Apagar um anúncio especificado pelo id.",
                "tags": ["Anuncios"],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Anúncio foi removido, não retorna nenhum conteúdo.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#components/schemas/Anuncios"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Não foi encontrado nenhum anúncio com esse id."
                    }
                }
            }
        },
        "/usuarios/registro": {
            "post": {
                "description": "Criar um conta de usuário",
                "tags": ["Usuários"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "$ref": "#components/schemas/Usuarios"
                            },
                            "examples": {
                                "Usuario": {
                                    "value": {
                                        "nome": "Matheus",
                                        "email": "matheus@gmail.com",
                                        "senha": "12345"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Usuário criado.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#components/schemas/Usuarios"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/usuarios/login":{
            "post": {
                "description": "Criar um conta de usuário",
                "tags": ["Usuários"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "$ref": "#components/schemas/Usuarios"
                            },
                            "examples": {
                                "Usuario": {
                                    "value": {
                                        "nome": "Matheus",
                                        "email": "matheus@gmail.com",
                                        "senha": "12345"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Usuário criado.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#components/schemas/Usuarios"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/usuarios/{id}": {
            "delete": {
                "tags": ["Usuários"],
                "description": "Remover um usuário pelo id.",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Usuário removido."
                    },
                    "404": {
                        "description": "Usuário não foi encontrado."
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Anuncios": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "titulo": {
                        "type": "string",
                        "example": "Anuncio 1"
                    },
                    "descricao": {
                        "type": "string",
                        "example": "Este é um anuncio de teste."
                    },
                    "categoria": {
                        "type": "string",
                        "example": "Básico"
                    },
                    "preco": {
                        "type": "number",
                        "example": 12.12
                    },
                    "anunciante": {
                        "type": "string",
                        "example": "Matheus"
                    },
                    "contato": {
                        "type": "string",
                        "example": "1111-1111"
                    }
                }
            },
            "Usuarios": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "nome": {
                        "type": "string",
                        "example": "Matheus"
                    },
                    "email": {
                        "type": "string",
                        "example": "matheus@gmail.com"
                    },
                    "senha": {
                        "type": "string",
                        "example": "12345"
                    }
                }
            }
        }
    }
}